<h1>Show</h1>

<h2><%= @list.name %></h2>

<% @list.bookmarks.each do |bookmark| %>
<p><%= bookmark.comment %> -- <%= bookmark.movie.title %></p>
<% end %>

<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %></li>
  <%= link_to "destroy bookmark", bookmark_path(bookmark.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>

<p><%= link_to 'Add a new bookmark', new_list_bookmark_path(@list) %></p>
<p><%= link_to 'back to list', lists_path %></p>
